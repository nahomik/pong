pipeline {
    agent any

    environment {
        NEXUS_CREDENTIALS = credentials('nexus-creds')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/nahomik/pong.git', 
                    credentialsId: 'github-creds'
            }
        }

        stage('Upload to Nexus') {
            steps {
                sh '''
                echo "üîê Authenticating to Nexus..."
                export NEXUS_USER=${NEXUS_CREDENTIALS_USR}
                export NEXUS_PASS=${NEXUS_CREDENTIALS_PSW}

                VERSION=v${BUILD_NUMBER}
                echo "üöÄ Uploading Pong version $VERSION to Nexus..."
                ./upload.sh $VERSION
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully uploaded Pong version v${BUILD_NUMBER} to Nexus"
        }
        failure {
            echo "‚ùå Upload failed for Pong version v${BUILD_NUMBER}"
        }
    }
}
