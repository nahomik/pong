pipeline {
    agent any

    environment {
        VERSION = "v${BUILD_NUMBER}"
        NEXUS_CREDENTIALS = credentials('nexus-creds')
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/pong.git'
            }
        }

        stage('Upload to Nexus') {
            steps {
                sh '''
                echo "üîê Authenticating to Nexus..."
                export NEXUS_USER=${NEXUS_CREDENTIALS_USR}
                export NEXUS_PASS=${NEXUS_CREDENTIALS_PSW}

                echo "üöÄ Uploading Pong version $VERSION to Nexus..."
                ./upload.sh $VERSION
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Successfully uploaded Pong version $VERSION to Nexus"
        }
        failure {
            echo "‚ùå Upload failed for Pong version $VERSION"
        }
    }
}
