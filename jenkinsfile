pipeline {
    agent any

    environment {
        NEXUS_URL = 'http://localhost:8081/repository/web-assets/'
        NEXUS_CREDENTIALS_ID = 'nexus-creds'  // your Jenkins Nexus creds ID
        ZIP_FILE = 'src.zip'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/nahomik/pong.git'
            }
        }

        stage('Package') {
            steps {
                script {
                    // Zip the src folder inside pong
                    sh 'zip -r ${ZIP_FILE} pong/src'
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                script {
                    // Upload zip to Nexus via curl with credentials
                    withCredentials([usernamePassword(credentialsId: NEXUS_CREDENTIALS_ID,
                                                    passwordVariable: 'NEXUS_PASS',
                                                    usernameVariable: 'NEXUS_USER')]) {
                        sh """
                        curl -v -u $NEXUS_USER:$NEXUS_PASS --upload-file ${ZIP_FILE} ${NEXUS_URL}${ZIP_FILE}
                        """
                    }
                }
            }
        }
    }
}
